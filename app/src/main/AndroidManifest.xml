<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzy.event.ac">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 网络断开、网络连接 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 开机广播 -->
    <application
        android:name="com.zzy.def.base.APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".Main2Activity"></activity>
        <activity android:name="com.zzy.retrofit.ac.RetrofitActivity"></activity>
        <activity android:name="com.zzy.butterkniffe.ac.ButterKniffeActivity"></activity>
        <activity android:name="com.zzy.okhttp.ac.OkhttpActivity"></activity>
        <activity android:name="com.zzy.zxing.ac.ZXingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 静态注册广播接收器，接收开机广播 -->
        <!-- android:enabled="true"  表示是否开启这个广播接收器 -->
        <!-- android:exported="true" 表示是否允许这个广播接收器接收本程序以外的广播 -->
        <!-- android:priority="100"  有序广播优先级，优先级越高，会先收到广播 -->
        <receiver
            android:name="com.zzy.android.broadcast.MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.zzy.broadcast1" />
            </intent-filter>
        </receiver>

        <activity android:name="com.zzy.android.broadcast.BroadcastActivity"></activity>
        <activity android:name="com.zzy.android.broadcast.LocalBroadcastActivity"></activity>
        <activity android:name="com.zzy.android.data_sqlite.SqliteActivity"></activity>

        <!-- android:enabled="true"  表示是否开启这个内容提供器 -->
        <!-- android:exported="true" 表示是否允许外部程序访问我们的内容提供器 -->
        <provider
            android:name="com.zzy.android.contentprovider.ContentProviderT"
            android:authorities="com.zzy.provider"
            android:enabled="true"
            android:exported="true"></provider>
    </application>

</manifest>